{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name" : "client",
            "image" : "sravan13/multi-client", /*name of the image from the docker hub */
            "hostname" : "client", /* other container identify this container with host name*/
            "essential" : false /* If true then this container crashed then other contained should be stopped*/
        },
        {
            "name" : "server",
            "image" : "sravan13/multi-server", 
            "hostname" : "api",
            "essential" : false
        },
        {
            "name" : "worker",
            "image" : "sravan13/multi-worker", 
            "hostname" : "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "sravan13/multi-nginx", 
            "hostname" : "nginx",
            "essential" : true,
            "portMapping": [
                {
                    "hostPort": 80,
                    "containerPort":80
                }
            ],
            "links": ["client","server"]
        }



        
    ]
}


- docker build -t sravan13/multi-client ./client
- docker build -t sravan13/multi-nginx  ./nginx
- docker build -t sravan13/multi-server ./server
- docker build -t sravan13/multi-worker ./worker